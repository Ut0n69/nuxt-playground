{
  "compilerOptions": {
    "jsx": "preserve",
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitThis": false,
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "outDir": "/dist",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}